{% extends 'base.html.twig' %}
{% block body %}
    {% block javascripts %}
        <script src="{{asset('JS/toast.js')}}" ></script>
        {% endblock %}
    <h1>{{ title }}</h1>
    {% if age is defined %}
        {% if age < 18 %}
            <p>Tu es mineur</p>
        {% elseif age>=18 %}
            <p>Tu es majeur</p>
        {% endif %}
    {% endif %}
    <!-- Gestion des erreurs de connexion -->

    {% if errorLogin is defined %}

        <div class="toast" style="position: absolute;top: 5rem;right: 1rem;" role="alert" aria-live="assertive" data-delay="4000" aria-atomic="true"  >
            <div class="toast-header" >

                <strong class="mr-auto" >
                    Error login
                </strong>

                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close" >
                    <span aria-hidden="true" >&times;</span>
                </button>

            </div>

            <div class="toast-body" >
                <h2 class="text-danger" >{{ errorLogin }}</h2>
            </div>

        </div>

    {% endif %}


    <!-- Display the welcome message -->
    <p>Bienvenue mec sur notre site !</p>

{% endblock %}
